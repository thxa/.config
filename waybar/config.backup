{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces"],
  "modules-center": [],
  "modules-right": ["network", "clock"],

  "clock": {
    "format": "{:%Y-%m-%d %H:%M:%S}",
    "tooltip-format": "{:%A, %B %d, %Y}"
